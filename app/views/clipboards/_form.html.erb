<%= form_with(model: clipboard) do |form| %>
  <% if clipboard.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(clipboard.errors.count, "error") %> prohibited this clipboard from being saved:</h2>

      <ul>
        <% clipboard.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-5">
    <div class="card border-0" style="width: 22rem;">
      <div class="card-body d-flex flex-column align-items-center">
        <div class="d-flex align-items-center mt-3">
          <%= form.label :area, class: "fw-bold me-2" %>
          <%= form.text_field :area %>
        </div>

        <div>
          <%= form.hidden_field :user_id, value: current_user.id %>
        </div>
        <div class="d-flex"> 
          <%= link_to "Back to clipboards", clipboards_path, class: "btn btn-primary btn-sm mt-3 mx-1" %>
          <%= form.submit class: "btn btn-success btn-sm mt-3" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
