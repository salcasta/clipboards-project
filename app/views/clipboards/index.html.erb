<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <%= link_to new_clipboard_path, class: "btn btn-primary btn-sm align-item-start" do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
  <h1 class="text-center flex-grow-1">Clipboards</h1>
</div>

<div id="clipboards" class="d-flex flex-row justify-content-center flex-wrap mt-4">
  <% @clipboards.each do |clipboard| %>
      <%= render clipboard %>
  <% end %>
</div>
