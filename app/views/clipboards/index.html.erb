<div class="d-flex justify-content-between align-items-center">
  <h1 class="text-center flex-grow-1">Clipboards</h1>
</div>

<div id="clipboards" class="d-flex flex-row justify-content-center flex-wrap mt-4">
  <% @clipboards.each do |clipboard| %>
      <%= render clipboard %>
  <% end %>

  <%= link_to new_clipboard_path, class: "text-decoration-nonw text-dark" do %>
    <div class="card mt-3 border-0" style="width: 22rem; height:9rem;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center bg-info rounded">
        <i class="fa-solid fa-plus fa-4x"></i>
      </div>
    </div>
  <% end %>
</div>
