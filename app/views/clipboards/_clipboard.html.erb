<div id="<%= dom_id clipboard %>" class="me-3">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title fw-bold"><%= clipboard.area.upcase %></h5>
      <p class="card-text"><%= "Manage your #{clipboard.area} inventory sheets" %></p>
      <div class="d-flex">
        <%= link_to "Edit", edit_clipboard_path(clipboard), class: "btn btn-outline-secondary fw-bold p-2" %>
        <%= link_to "Inventory Sheets", inventorysheets_path(clipboard_id: clipboard.id), class: "btn btn-outline-primary fw-bold p-2 mx-2" %>
        <%= button_to "Delete", clipboard, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger fw-bold p-2" %>
      </div>
    </div>
  </div>
</div>
