<div id="<%= dom_id inventorysheet %>" class="me-3">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title fw-bold"><%= inventorysheet.date.strftime("%B %d, %Y") %></h5>
      <p class="card-text fw-bold"><%= inventorysheet.clipboard.area.upcase %></p>
      <p class="card-text"><%= "Complete: #{inventorysheet.is_complete}" %></p>
      <p class="card-text"><%= "Holiday: #{inventorysheet.is_holiday}" %></p>
      <div class="d-flex">
        <%= link_to "Edit", edit_inventorysheet_path(inventorysheet), class: "btn btn-outline-secondary fw-bold btn-sm p-2 mx-2" %>
        <% unless current_page?(inventorysheet) %>
          <%= link_to "View", inventorysheet, class: "btn btn-outline-primary btn-sm fw-bold p-2 mx-2" %>
        <% end %>
        <%= button_to "Delete", inventorysheet, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger btn-sm fw-bold p-2 mx-2" %>
      </div>
    </div>
  </div>
</div>
