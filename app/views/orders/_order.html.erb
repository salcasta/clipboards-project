<div id="<%= dom_id order %>" class="d-flex justify-content-center me-3">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <p class="card-text">
        <strong>On hand:</strong>
        <%= order.on_hand %>
      </p>

      <p class="card-text">
        <strong>Quantity:</strong>
        <%= "#{order.quantity} x #{order.item.pack_size} (pack size) = #{order.quantity * order.item.pack_size}"%>
      </p>

      <p class="card-text">
        <strong>Par Level:</strong>
        <%= order.item.par_level || "None provided" %>
      </p>

      <p class="card-text">
        <strong>Unit:</strong>
        <%= order.item.unit || "None provided" %>
      </p>

      <p class="card-text">
        <strong>Pack Size:</strong>
        <%= order.item.pack_size || "None provided" %>
      </p>

      <div class="d-flex">
        <%= link_to "Edit this order", edit_order_path(order), class: "btn btn-outline-secondary btn-sm fw-bold p-2" %>
        <%= link_to "Back to the inventory sheet", inventorysheet_path(order.inventory_sheets_id), class: "btn btn-outline-primary btn-sm fw-bold p-2 mx-2" %>
        <%= button_to "Delete", order, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger btn-sm fw-bold p-2" %>
      </div>
    </div>
  </div>
</div>
