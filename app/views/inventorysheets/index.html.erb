<div class="d-flex justify-content-between align-items-center">
  <h1 class="text-center display-6 flex-grow-1">Inventory Sheets</h1>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= link_to 'Holiday Inventory Sheets', holiday_inventorysheets_path, class: "btn btn-outline-primary fw-bold" %>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= search_form_for @q do |f| %>
    <div>
      <%= f.label :date_cont, "Date" %>
      <%= f.search_field :date_cont, :placeholder => "YYYY-MM-DD" %>
      <%= f.submit :class => "btn btn-primary btn-sm" %>
      <a class="btn btn-danger btn-sm" href="/inventorysheets">Clear filters</a>
    </div>
  <% end %>
</div>

<%= render partial: "add_button" %>

<div id="inventorysheets" class="d-flex flex-row justify-content-center flex-wrap mt-4">
  <%= render partial: "inventorysheet", collection: @inventorysheets, as: :inventorysheet %>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= paginate @inventorysheets, param_name: "inventorysheets_page" %>
</div>
