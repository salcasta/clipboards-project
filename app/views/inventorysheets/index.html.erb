<div class="d-flex justify-content-between align-items-center">
  <h1 class="text-center display-6 flex-grow-1">Inventory Sheets</h1>
</div>

<div class="d-flex justify-content-center">
  <%= link_to new_inventorysheet_path, class: "text-decoration-nonw text-dark" do %>
    <div class="card mt-3 border-0" style="width: 22rem; width: 20rem;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center bg-info rounded">
        <i class="fa-solid fa-plus fa-4x"></i>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-3">
  <%= link_to 'Holiday Inventory Sheets', holiday_inventorysheets_path, class: "btn btn-outline-primary fw-bold" %>
</div>

<div id="inventorysheets" class="d-flex flex-row justify-content-center flex-wrap mt-4">
  <% @inventorysheets.each do |inventorysheet| %>
      <%= render inventorysheet %>
  <% end %>
</div>
