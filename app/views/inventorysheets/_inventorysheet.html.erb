<div id="<%= dom_id inventorysheet %>" class="me-3">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title fw-bold"><%= inventorysheet.date.strftime("%B %d, %Y") %></h5>
      <p class="card-text fw-bold"><%= inventorysheet.clipboard.area.upcase %></p>
      <p class="card-text"><%= "Complete: #{inventorysheet.is_complete}" %></p>
      <p class="card-text"><%= "Holiday: #{inventorysheet.is_holiday}" %></p>
      <div class="d-flex">
        <%= link_to "Edit", edit_inventorysheet_path(inventorysheet), class: "btn btn-warning btn-sm p-2 mx-2" %>
        <%= link_to "View", inventorysheet, class: "btn btn-success btn-sm p-2 mx-2" %>
        <%= link_to "Delete", inventorysheet, class: "btn btn-danger btn-sm p-2 mx-2" %>
      </div>
    </div>
  </div>
</div>
