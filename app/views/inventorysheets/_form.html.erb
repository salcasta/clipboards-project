<%= form_with(model: inventorysheet) do |form| %>
  <% if inventorysheet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(inventorysheet.errors.count, "error") %> prohibited this inventorysheet from being saved:</h2>

      <ul>
        <% inventorysheet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.label :is_holiday, style: "display: block" %>
    <%= form.check_box :is_holiday %>
  </div>

  <div>
    <%= form.label :is_complete, style: "display: block" %>
    <%= form.check_box :is_complete %>
  </div>

  <div>
    <%= form.hidden_field :user_id, value: current_user.id%>
  </div>

  <div>
    <%= form.label :clipboard_id, style: "display: block" %>
    <%= form.select :clipboard_id, @clipboards.map { |clipboard| [clipboard.area, clipboard.id]} %>
  </div>

  <div>
    <%= form.submit "Update inventory sheet" %>
  </div>
<% end %>
