<div class="d-flex justify-content-center">
  <h2 class="display-6">Sign up</h2>
</div>

<div class="d-flex justify-content-center">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <div class="card-text text-center">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { autocomplete: "email", class: "mb-2" }%>
            <%= f.input :password,
                        required: true,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { autocomplete: "new-password", class: "mb-2" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "mb-2" } %>
            <%= f.input :organization_name,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "mb-2" }  %>
            <%= f.input :general_manager_name,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "mb-2" }  %>
          </div>

          <div class="form-actions d-flex justify-content-center mt-3">
            <%= f.button :submit, "Sign up", class: "btn btn-outline-primary mb-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
