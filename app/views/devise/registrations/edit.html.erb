<div class="d-flex justify-content-center">
  <h2 class="display-6">Edit <%= resource_name.to_s.humanize %></h2>
</div>

<div class="d-flex justify-content-center">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <div class="card-text text-center">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, 
                         required: true, 
                         autofocus: true,
                         label_html: { class: "d-flex justify-content-center mb-2" },
                         input_html: { class: "mb-2"} %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        required: false,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { autocomplete: "new-password", class: "mb-2" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { autocomplete: "new-password", class: "mb-2"} %>
            <%= f.input :organization_name,
                        required: true,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { class: "mb-2"} %>
            <%= f.input :general_manager_name,
                        required: true,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { class: "mb-2"} %>
            <%= f.input :current_password,
                        required: true,
                        label_html: { class: "d-flex justify-content-center mb-2" },
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update", class: "btn btn-success mt-2 mb-5" %>
          </div>
        <% end %>

        <div>
          <p>We need your current password to confirm your changes</p>
        </div>

        <h3 class="display-6">Danger Zone</h3>

        <div><%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
