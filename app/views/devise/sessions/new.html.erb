<div class="d-flex justify-content-center">
  <h2 class="display-6">Log in</h2>
</div>


<div class="d-flex justify-content-center">
  <div class="card mt-3 border-0" style="width: 22rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <div class="card-text text-center">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label_html: { style: 'margin-bottom: 1rem; padding-left: 2rem;' },
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        label_html: { style: 'margin-bottom: 1rem;' },
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions mt-3">
            <%= f.button :submit, "Log in", class: "btn btn-primary btn-sm mb-2" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
