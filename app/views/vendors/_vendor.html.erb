<div id="<%= dom_id vendor %>" class="me-3">
  <div class="card mt-3 border-0" style="width: 22rem; height:14rem;">
    <div class="card-body d-flex flex-column align-items-center">
      <h5 class="card-title fw-bold"><%= vendor.company_name.upcase %></h5>
      <p class="card-text"><%= "#{vendor.rep_name}" %></p>
      <p class="card-text"><%= "#{vendor.rep_email}" %></p>
      <p class="card-text"><%= "#{vendor.rep_phone_number}" %></p>
      <div class="d-flex">
        <%= link_to "Edit", edit_vendor_path(vendor), class: "btn btn-warning p-2 mx-2" %>
        <%= link_to "Delete", vendor, class: "btn btn-danger p-2 mx-2" %>
      </div>
    </div>
  </div>
</div>
