<p style="color: green"><%= notice %></p>

<div class="d-flex justify-content-between align-items-center">
  <h1 class="text-center flex-grow-1">Vendors</h1>
</div>

<div id="vendors" class="d-flex flex-row justify-content-center flex-wrap mt-4">
  <% @vendors.each do |vendor| %>
      <%= render vendor %>
  <% end %>

  <%= link_to new_vendor_path, class: "text-decoration-nonw text-dark" do %>
    <div class="card mt-3" style="width: 22rem; height:9rem;">
      <div class="card-body d-flex flex-column justify-content-center align-items-center bg-info">
        <i class="fa-solid fa-plus fa-4x"></i>
      </div>
    </div>
  <% end %>
</div>
