<%= form_with(model: vendor) do |form| %>
  <% if vendor.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(vendor.errors.count, "error") %> prohibited this vendor from being saved:</h2>

      <ul>
        <% vendor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-5">
    <div class="card border-0" style="width: 22rem;">
      <div class="card-body d-flex flex-column align-items-center">
        <div class="d-flex align-items-center mt-3">
          <%= form.label :company_name, class: "fw-bold me-1" %>
          <%= form.text_field :company_name %>
        </div>

        <div class="d-flex align-items-center mt-3">
          <%= form.label :rep_name, class: "fw-bold me-5" %>
          <%= form.text_field :rep_name %>
        </div>

        <div class="d-flex align-items-center mt-3">
          <%= form.label :rep_email, class: "fw-bold me-5" %>
          <%= form.text_field :rep_email %>
        </div>

        <div class="d-flex align-items-center mt-3">
          <%= form.label :rep_phone_number, class: "fw-bold" %>
          <%= form.text_field :rep_phone_number %>
        </div>

        <div>
          <%= form.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="d-flex"> 
          <%= link_to "Back to vendors", vendors_path, class: "btn btn-outline-primary btn-sm fw-bold mt-3 mx-1" %>
          <%= form.submit class: "btn btn-outline-success btn-sm fw-bold mt-3" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
